<div class="user_box">
  <% if user_signed_in? %>
  
  <div class="name">
    <%= current_user.email %>
  </div>
  <div class="user_posts">
    <div class="posts_count">
      <%=  current_user.posts.public.count %>
    </div>
  
    <div class="text">
      显示中的帖子
    </div>
  </div>

  <div class="cell row">
    <div class="new_post col-md-6">
      <%= link_to "发贴", new_post_path, class: "btn btn-default" %>
    </div>
    <div class="manage_posts col-md-5">
      <%= link_to "管理", self_posts_path, class: "btn  btn-default" %>
    </div>
  </div>

  <% else %>
  <div class="unlogin">
    <div class="welcome">
     <p> 这里是一个自由的交易物品的社区</p>
    </div>
    <div class="register">
      <%= link_to "注册", new_user_registration_path, class: "btn btn-info btn-lg" %>
    </div>
    <div class="login">
      已有帐号,可<%= link_to "直接登录", new_user_session_path %>
    </div>
  </div>
  <% end %>
</div>