<div class="container">
	
	<ul class="nav nav-tabs">
	  <li class="active"><%= link_to "显示中的帖子", posts_self_path %> </li>
	  <li> <%= link_to "已删除的帖子", posts_self_deleted_path %> </li>
	</ul>
	
	
	<% if @posts.blank? %>
	<div>
	</div>
	<% else %>
	<% @posts.each do | post | %>
	
	  <div class="row">
  		  <div class="col-md-4">
		   	  <%= link_to post.title, post_path(post)%>
		  </div>
		  <div class="col-md-2">
			  <%= link_to "修改", edit_post_path(post)%>
		  </div>
		  <div class="col-md-2">
			  <%= link_to "删除", post_path(post), method: :delete, data: {confirm: "你确定要删除这条信息么"}%>
		  </div>
	  </div>
	  <% end %>
	<% end %>
</div>