<div class="user_cell">
  <%= render "public/user_cell"%>
</div>

<div class="result">
  <p>找到<%= @posts.count%>个结果</p>
</div>

<div class="tradeArea">
  <div class="tradeList">
    <% @posts.each do |post|%>
    <div class="tradeItem">
      
      <div class="price">
        <%= post.price.to_i %> 元
      </div>
      
      <div class="title">
        <%= link_to post.title, post_path(post)%>
        <div class="extra_info">
          <div class="school">
            <% school = School.find post.school_id %>
            <%= link_to school.name, posts_path(school: school.id) %>
          </div>
          <div class="time">
            <%= time_ago_in_words post.created_at %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>  
</div>